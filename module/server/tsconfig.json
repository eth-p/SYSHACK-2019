{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "baseUrl": ".",
    "paths": {
      "@chat/*": ["lib/chat/*"],
      "@util/*": ["lib/util/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "bin/*",
    "src/**/*.ts",
    "routes/**/*.ts"
  ]
}
